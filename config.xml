<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.ign.geoportail" version="2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Géoportail</name>
    <description>
      Géoportail, le portail des territoires et des citoyens !
      Visualisez l'information géographique de référence sur le territoire national.
      Photographies aériennes, cartes contemporaines (dont les cartes topographiques IGN), cartes anciennes, composantes du référentiel géographique à grande échelle et parcelles cadastrales sont accessibles directement depuis votre mobile ou votre tablette.
    </description>
    <author email="ecom@ign.fr" href="http://www.geoportail.gouv.fr">
        IGN - Géoportail
    </author>
    <icon src="www/img/apple-touch-icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="AppendUserAgent" value="GeoportailAppAndroid" />
        <splash density="land-hdpi" src="res/screen/android/splash2732x2732.png" />
        <splash density="land-ldpi" src="res/screen/android/splash2732x2732.png" />
        <splash density="land-mdpi" src="res/screen/android/splash2732x2732.png" />
        <splash density="land-xhdpi" src="res/screen/android/splash2732x2732.png" />
        <splash density="port-hdpi" src="res/screen/android/splash2732x2732.png" />
        <splash density="port-ldpi" src="res/screen/android/splash2732x2732.png" />
        <splash density="port-mdpi" src="res/screen/android/splash2732x2732.png" />
        <splash density="port-xhdpi" src="res/screen/android/splash2732x2732.png" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="ShowSplashScreenSpinner" value="false" />
    </platform>
    <platform name="browser">
        <preference name="SplashScreenDelay" value="0" />
        <preference name="ShowSplashScreen" value="false" />
    </platform>
    <platform name="ios">
        <splash src="res/screen/ios/Default@2x~universal~anyany.png" />
        <preference name="StatusBarOverlaysWebView" value="true" />
        <preference name="StatusBarBackgroundColor" value="#146cac" />
        <allow-navigation href="*" />
        <preference name="AppendUserAgent" value="GeoportailAppIOS" />
        <feature name="CDVWKWebViewEngine">
          <param name="ios-package" value="CDVWKWebViewEngine" />
        </feature>
        <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />

        <edit-config target="NSLocationWhenInUseUsageDescription" file="*-Info.plist" mode="merge">
          <string>Nécessite la géolocalisation pour centrer la carte sur l'utilisateur</string>
        </edit-config>
        <preference name="WKWebViewOnly" value="true" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <access origin="*" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
    </platform>
</widget>
