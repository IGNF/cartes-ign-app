<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.ign.geoportail" version="1.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Géoportail</name>
    <description>
        Application actuellement en maintenance.
    </description>
    <author email="ecom@ign.fr" href="http://www.geoportail.gouv.fr">
        IGN - Géoportail
    </author>
    <icon src="www/img/apple-touch-icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

</widget>
